# Screenshot key binding

bindsym --release Print exec $NSI scrot ~/Pictures/Screenshots/%y-%m-%d_%T_fullScreen.png
bindsym --release Shift+Print exec $NSI scrot -s ~/Pictures/Screenshots/%y-%m-%d_%T_region.png


# System Lock, Suspend, Exit, Reboot, Halt settings

set $Locker i3lock -i ~/Pictures/lock_bg.png && sleep 1
set $mode_system System (l) lock, (e) logout, (s) suspend, (r) reboot, (Shift+s) shutdown

mode "$mode_system" {
    bindsym l exec $NSI $Locker, mode "default"
    bindsym e exec $NSI i3-msg exit, mode "default"
    bindsym s exec $NSI $Locker && systemctl suspend, mode "default"
#    bindsym h exec $NSI i3lock -i /home/mijo/Pictures/Wallpapers/lock_bg.png && systemctl hibernate, mode "default"
    bindsym r exec $NSI systemctl reboot, mode "default"
    bindsym Shift+s exec $NSI systemctl poweroff -i, mode "default"

# back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+Pause mode "$mode_system"
