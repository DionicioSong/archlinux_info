    status_command  i3blocks
    position	    top
    colors {
	background  #282828
	statusline  #B08427

#	Colorclass	    <border> <backgr> <text>
	focused_workspace   #B08427 #86651E #F3CD7D
	active_workspace    #404040 #5F676A #FFFFFF
	inactive_workspace  #454545 #252525 #B69968
	urgent_workspace    #454545 #68786C #282828
    }
}


